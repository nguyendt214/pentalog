<?xml version="1.0"?>
<config>
    <modules>
        <Pentalog_Blog>
            <version>0.1.0</version>
        </Pentalog_Blog>
    </modules>
    <frontend>
        <routers>
            <blog>
                <use>standard</use>
                <args>
                    <module>Pentalog_Blog</module>
                    <frontName>blog</frontName>
                </args>
            </blog>
        </routers>
        <layout>
            <updates>
                <blog>
                    <file>xpentalog_blog.xml</file>
                </blog>
            </updates>
        </layout>
        <translate>
            <modules>
                <blog>
                    <files>
                        <default>Xpentalog_Blog.csv</default>
                    </files>
                </blog>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <blog>
                    <file>xpentalog_blog.xml</file>
                </blog>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <blog>
                <use>admin</use>
                <args>
                    <module>Pentalog_Blog</module>
                    <frontName>blog</frontName>
                </args>
            </blog>
        </routers>
    </admin>
    <global>
        <models>
            <blog>
                <class>Pentalog_Blog_Model</class>
                <resourceModel>blog_mysql4</resourceModel>
            </blog>
            <blog_mysql4>
                <class>Pentalog_Blog_Model_Mysql4</class>
                <entities>
                    <blog>
                        <table>p5_xblog_blog</table>
                    </blog>
                    <category>
                        <table>p5_xblog_category</table>
                    </category>
                    <blogcategory>
                        <table>p5_xblog_blog_category</table>
                    </blogcategory>
                    <blogstore>
                        <table>p5_xblog_blog_store</table>
                    </blogstore>
                    <categorystore>
                        <table>p5_xblog_category_store</table>
                    </categorystore>
                    <comment>
                        <table>p5_xblog_comment</table>
                    </comment>
                    <type>
                        <table>p5_xblog_type</table>
                    </type>
                </entities>
            </blog_mysql4>
        </models>
        <resources>
            <blog_setup>
                <setup>
                    <module>Pentalog_Blog</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </blog_setup>
            <blog_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </blog_write>
            <blog_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </blog_read>
        </resources>
        <blocks>
            <blog>
                <class>Pentalog_Blog_Block</class>
            </blog>
        </blocks>
        <helpers>
            <blog>
                <class>Pentalog_Blog_Helper</class>
            </blog>
        </helpers>
    </global>
    <default>
        <blog_section>
            <general>
                <active>1</active>
                <blog_title>Pentalog Blog</blog_title>
                <layout>page/1column.phtml</layout>
            </general>
            <blog_config>
                <blog_list_image_width>150</blog_list_image_width>
                <blog_list_image_height>150</blog_list_image_height>
                <column_article>4</column_article>
                <toolbar_default_direction>desc</toolbar_default_direction>
                <toolbar_default_sort_by>blog_id</toolbar_default_sort_by>
                <toolbar_show_per_page>4,8,12</toolbar_show_per_page>
                <blog_detail_image_width>300</blog_detail_image_width>
                <blog_detail_image_height>300</blog_detail_image_height>
                <default_article_image>xpentalog/blog/defaultImage.jpg</default_article_image>
                <allow_not_login_write_comment>1</allow_not_login_write_comment>
            </blog_config>
            <blog_category>
                <blog_category_list_image_width>150</blog_category_list_image_width>
                <blog_category_list_image_height>150</blog_category_list_image_height>
                <blog_category_view_image_width>100%</blog_category_view_image_width>
                <blog_category_view_image_height>300</blog_category_view_image_height>
            </blog_category>
        </blog_section>
    </default>
</config>